<!DOCTYPE html>
<html>
  <head>
    <title>TodoProject</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <br>
      <div class="menu">
        <%= link_to 'Home', root_path %> |
        <%= link_to 'Tasks', tasks_path %> |
        <%= link_to 'Categories', categories_path %> |
        <%= link_to 'Folders', folders_path %>
      </div>

      <%= yield %>
    </div>

    <div id="sidebar">
      <div class="header">
      </div>

      <ul>
        <li>Folders</li>

        <% all_folders do |folder| %>
          <li><%= link_to folder.name, folder %></li>
        <% end %>
      </ul>
    </div>

    <div id="content">
      <div class="header">
      </div>
    </div>

  </body>
</html>
